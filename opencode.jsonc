{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      "disable": true
    },
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "tweak": {
      "mode": "primary",
      "model": "github-copilot/claude-haiku-4.5"
    },
    "free": {
      "mode": "primary",
      "model": "opencode/big-pickle"
    },
    "writer": {
      "mode": "all",
      "model": "opencode/kimi-k2",
      "description": "An agent specialized in writing well crafted words",
    }
  },
  "mcp": {
    "chrome-devtools-mcp": {
      "type": "local",
      "command": [
        "npx",
        "chrome-devtools-mcp@latest",
        "--browser-url=http://127.0.0.1:9222"
      ],
    },
    // NOTE: used 24k tokens just to answer "what tools do you have access to via the playwright mcp?"
    "playwright-mcp": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--extension"
      ],
    },
  },
  "tools": {
    "chrome-mcp-server*": false,
    "chrome-devtools-mcp*": false,
    "playwright-mcp*": false,
  },
  "keybinds": {
    "session_child_cycle": "ctrl+shift+right",
    "session_child_cycle_reverse": "ctrl+shift+left",
  }
}