{
  "$schema": "https://opencode.ai/config.json",
  // "small_model": "vercel/minimax/minimax-m2.1",
  "small_model": "openrouter/minimax/minimax-m2.1",
  "tui": {
    // "scroll_speed": 6,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "agent": {
    "precise": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "prompt": "{file:./prompts/precise-prompt.md}"
    },
    "cheap": {
      "mode": "primary",
      // "model": "opencode/glm-4.7-free",
      // "model": "vercel/minimax/minimax-m2.1",
      "model": "openrouter/minimax/minimax-m2.1",
      "prompt": "{file:./prompts/king.md}"
    },
    "writer": {
      "mode": "primary",
      "model": "opencode/kimi-k2-thinking",
      "prompt": "{file:./prompts/writer.md}",
      "description": "An agent specialized in writing well crafted words",
    },
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
  },
  "formatter": {
    "prettier": {
      "command": [
        "pnpx",
        "pretter@3.7.4",
        "--write",
        "$FILE"
      ],
      "extensions": [
        ".js",
        ".ts",
        ".jsx",
        ".tsx",
        ".json",
        ".jsonc"
      ]
    },
    "markdown": {
      "command": [
        "pnpx",
        "remark-cli@12.0.1",
        "$FILE",
        "--output"
      ],
      "extensions": [
        ".md"
      ]
    }
  },
  // "mcp": {
  //   "chrome-devtools-mcp": {
  //     "type": "local",
  //     "command": [
  //       "npx",
  //       "chrome-devtools-mcp@latest",
  //       "--browser-url=http://127.0.0.1:9222"
  //     ],
  //   },
  //   // "playwright-mcp": {
  //   //   "type": "local",
  //   //   "command": [
  //   //     "npx",
  //   //     "@playwright/mcp@latest",
  //   //     "--extension"
  //   //   ],
  //   // },
  // },
  "tools": {
    "chrome-devtools-mcp_*": false,
    "task": false
  },
  "keybinds": {
    "session_child_cycle": "ctrl+shift+right",
    "session_child_cycle_reverse": "ctrl+shift+left",
  },
  "provider": {
    "opencode": {
      "blacklist": [
        "qwen3-coder",
        "claude-opus-4-1",
        "kimi-k2",
        "gpt-5.1-codex",
        "claude-haiku-4-5",
        "claude-opus-4-5",
        // "gemini-3-pro",
        // "claude-sonnet-4-5",
        // "kimi-k2-thinking",
        "gpt-5.1",
        "gpt-5-nano",
        "gpt-5-codex",
        // "big-pickle",
        "claude-3-5-haiku",
        "glm-4.6",
        "grok-code",
        "claude-sonnet-4",
        "gpt-5"
      ]
    },
    "github-copilot": {
      "blacklist": [
        "grok-code-fast-1",
        "gpt-5.1-codex",
        // "claude-haiku-4.5",
        "gemini-3-pro-preview",
        "oswe-vscode-prime",
        "gpt-5.1-codex-mini",
        "gpt-5.1",
        "gpt-5-codex",
        "gpt-4o",
        "gpt-4.1",
        "claude-opus-41",
        "gpt-5-mini",
