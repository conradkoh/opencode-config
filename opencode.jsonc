{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      "disable": true
    },
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5"
    },
    "tweak": {
      "mode": "primary",
      "model": "github-copilot/claude-haiku-4.5"
    },
    "free": {
      "mode": "primary",
      "model": "opencode/big-pickle"
    },
    "deep-research": {
      "mode": "all",
      "description": "An agent specilized in browsing the web.",
      "prompt": "file:./prompts/deep-research.md",
      "tools": {
        "playwright-mcp_*": true,
        "webfetch": false, // avoid using fetching data using webfetch
        "bash": false // security + ensure it uses the browser for web research
      }
    },
    "writer": {
      "mode": "all",
      "model": "opencode/kimi-k2",
      "description": "An agent specialized in writing well crafted words",
    }
  },
  "mcp": {
    "playwright-mcp": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--extension"
      ],
    },
  },
  "tools": {
    "playwright-mcp*": false,
  },
  "keybinds": {
    "session_child_cycle": "ctrl+shift+right",
    "session_child_cycle_reverse": "ctrl+shift+left",
  }
}