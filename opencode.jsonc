{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-windsurf-codeium@beta"
  ],
  // "small_model": "vercel/minimax/minimax-m2.5",
  // "small_model": "openrouter/minimax/minimax-m2.5",
  "small_model": "opencode/big-pickle",
  "tui": {
    // "scroll_speed": 6,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "agent": {
    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "disable": true
    },
    "precise": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      // "model": "github-copilot/claude-opus-4.5",
      "prompt": "{file:./prompts/precise-prompt.md}"
    },
    "cheap": {
      "mode": "primary",
      // "model": "github-copilot/claude-haiku-4.5",
      // "model": "opencode/glm-4.7-free",
      "model": "opencode/minimax-m2.5-free",
      // "model": "vercel/minimax/minimax-m2.5",
      // "model": "openrouter/minimax/minimax-m2.5",
      "prompt": "{file:./prompts/precise-prompt.md}"
    },
    "writer": {
      "mode": "primary",
      "model": "opencode/kimi-k2-thinking",
      "prompt": "{file:./prompts/writer.md}",
      "description": "An agent specialized in writing well crafted words",
    },
    "plan": {
      "disable": true
    },
  },
  "formatter": {
    // "prettier": {
    //   "command": [
    //     "pnpx",
    //     "pretter@3.7.4",
    //     "--write",
    //     "$FILE"
    //   ],
    //   "extensions": [
    //     ".js",
    //     ".ts",
    //     ".jsx",
    //     ".tsx",
    //     ".json",
    //     ".jsonc"
    //   ]
    // },
    "markdown": {
      "command": [
        "pnpx",
        "remark-cli@12.0.1",
        "$FILE",
        "--rc-path",
        "./remarkrc",
        "--output"
      ],
      "extensions": [
        ".md"
      ]
    }
  },
  // "mcp": {
  //   "chrome-devtools-mcp": {
  //     "type": "local",
  //     "command": [
  //       "npx",
  //       "chrome-devtools-mcp@latest",
  //       "--browser-url=http://127.0.0.1:9222"
  //     ],
  //   },
  //   // "playwright-mcp": {
  //   //   "type": "local",
  //   //   "command": [
  //   //     "npx",
  //   //     "@playwright/mcp@latest",
  //   //     "--extension"
  //   //   ],
  //   // },
  // },
  "tools": {
    "chrome-devtools-mcp_*": false,
    "task": false
  },
  "keybinds": {
    "session_child_cycle": "ctrl+shift+right",
    "session_child_cycle_reverse": "ctrl+shift+left",
  },
  "provider": {
    "opencode": {
      "whitelist": [
        "big-pickle",
        "minimax-m2.5-free",
        "kimi-k2.5-free"
      ]
    },
    "github-copilot": {
      "blacklist": [
        "grok-code-fast-1",
        "gpt-5.1-codex",
        // "claude-haiku-4.5",
        "gemini-3-pro-preview",
        "oswe-vscode-prime",
        "gpt-5.1-codex-mini",
        "gpt-5.1",
        "gpt-5-codex",
        "gpt-4o",
        "gpt-4.1",
        "claude-opus-41",
        "gpt-5-mini",
        "gemini-2.5-pro",
        "claude-sonnet-4",
        "gpt-5",
        // "claude-opus-4.5",
        // "claude-sonnet-4.5"
      ]
    },
    "openrouter": {
      "whitelist": [
        "z-ai/glm-4.7",
        "minimax/minimax-m2.5",
      ]
    },
    "vercel": {
      "whitelist": [
        "zai/glm-4.7",
        "minimax/minimax-m2.5"
      ]
    },
    "windsurf": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://127.0.0.1:42100/v1"
      },
      "models": {
        "swe-1.5": {
          "name": "SWE 1.5 (Windsurf)",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        },
        "claude-4.5-sonnet": {
          "name": "Claude 4.5 Sonnet (Windsurf)",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        },
        "claude-4.5-opus": {
          "name": "Claude 4.5 Opus (Windsurf)",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        }
      }
    }
  }
}